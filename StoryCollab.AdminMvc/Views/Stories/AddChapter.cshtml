@model StoryCollab.AdminMvc.Models.CreateChapterVm
@{
    ViewData["Title"] = "Add Chapter";
}
<div class="container mt-4" style="max-width:700px;">
    <h3>New Chapter</h3>
    <partial name="~/Views/Shared/_Alerts.cshtml" />
    <form method="post">
        <input type="hidden" asp-for="StoryId" />
        <div class="mb-2">
            <label class="form-label">Title</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Content (draft)</label>
            <textarea asp-for="Content" class="form-control" rows="8"></textarea>
        </div>
        <button class="btn btn-primary">Create Draft</button>
        <a asp-action="Index" class="btn btn-link">Back</a>
    </form>
</div>
